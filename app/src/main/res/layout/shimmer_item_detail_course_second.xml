<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCourseCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:text="@string/language"

        android:fontFamily="@font/poppins_w600"
        android:gravity="end"
        android:maxLines="7"
        android:background="@color/shimmer_item_inside"
        android:textColor="@color/shimmer_item_inside"
        app:layout_constraintBottom_toBottomOf="@+id/ivCourseCard"
        app:layout_constraintEnd_toStartOf="@id/ivCourseCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivCourseCard"
        tools:text="bahasa" />

</androidx.constraintlayout.widget.ConstraintLayout>