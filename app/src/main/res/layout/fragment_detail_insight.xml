<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.insight.detail.DetailInsightFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="19dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="9dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back_account_setting"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <TextView
                    style="@style/Typography.Headline5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="18dp"
                    android:gravity="center"
                    android:text="@string/detail_insight" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv_insight_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user_avatar_female"
                app:layout_constraintBottom_toBottomOf="@+id/tv_insight_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.209"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_insight_title" />

            <TextView
                android:id="@+id/tv_insight_title"
                style="@style/Typography.Subtitle2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="16dp"
                android:maxLines="3"
                android:padding="10dp"
                android:text="7 Challenges of Parenting a Special Kid"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_insight_detail"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <TextView
                android:id="@+id/tv_insight_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="14th October 2021"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.175"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_insight_detail" />

            <TextView
                android:id="@+id/tv_insight_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="9sp"
                android:paddingVertical="8dp"
                android:text="Parents occupy a special place in our familial ecosystem. \nThe children look up to the parents for every aspect of their lives. This job is the most demanding and satisfying task in the world. Being a parent is not easy, and it is highly complex. Though most parents pretend to know it all, the reality is slightly different. They are always filled with guilt and confusion. There are loads of queries that arise in their minds while raising a child.

\n\nEstablishment of unique ways of communication

\nThere are different kinds of neurological issues that can cause developmental problems in a child. The primary issue faced by parents is the lack of a hehe

\n\nHandling of social expectation
\nWe live in a competitive environment where most things are measured by number. Though most peop"
                android:translationY="-4.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_insight_date" />

            <TextView
                android:id="@+id/tv_insight_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                app:drawableStartCompat="@drawable/ic_insight_like"
                app:layout_constraintBottom_toBottomOf="@id/tv_insight_dislike"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_insight_dislike" />

            <TextView
                android:id="@+id/tv_insight_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                app:drawableStartCompat="@drawable/ic_insight_dislike"
                app:layout_constraintStart_toEndOf="@id/tv_insight_like"
                app:layout_constraintTop_toBottomOf="@id/tv_insight_body" />

            <TextView
                android:id="@+id/tv_insight_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/report"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_insight_add_comment"
                app:layout_constraintEnd_toStartOf="@id/tv_insight_add_comment"
                app:layout_constraintTop_toTopOf="@id/tv_insight_add_comment" />

            <TextView
                android:id="@+id/tv_insight_add_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_comment"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_insight_body" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/comments"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_insight_like" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tf_insight_comment"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:visibility="gone"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="#797979"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_comment"
                style="@style/Typography.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post"
                android:textAllCaps="false"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tf_insight_comment" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_insight_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_comment"
                tools:listitem="@layout/item_insight_comment" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>