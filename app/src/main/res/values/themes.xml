<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LingoParents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--removing shadow from actionbar-->
        <item name="elevation">0dp</item>
    </style>

    <style name="Typography" />

    <style name="Typography.Headline1">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Typography.Headline2">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Typography.Headline3">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Typography.Headline4">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Typography.Headline5">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Typography.Headline6">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Typography.Subtitle1">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Typography.Subtitle2">
        <item name="android:fontFamily">@font/poppins_w500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Typography.Body1">
        <item name="android:fontFamily">@font/poppins_w600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="Typography.Body2">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="Typography.Button">
        <item name="android:fontFamily">@font/poppins_w700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.Caption">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Typography.Overline">
        <item name="android:fontFamily">@font/poppins_w500</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">1.5</item>
    </style>
    
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
    </style>

    <style name="HomeHeaderCustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_header_card_custom_corners</item>
    </style>

    <style name="ShapeAppearance_header_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>
    
    <style name="AccountSettingTabsTextStyle" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance_tabs_account_setting</item>
    </style>
    
    <style name="TextAppearance_tabs_account_setting" parent="">
        <item name="fontFamily">@font/poppins_w600</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>