<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LingoParents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_orange_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_orange</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--removing shadow from actionbar-->
        <item name="elevation">0dp</item>
    </style>

    <style name="Typography" />

    <style name="Typography.Headline1">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Typography.Headline2">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Typography.Headline3">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Typography.Headline4">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Typography.Headline5">
        <item name="android:fontFamily">@font/poppins_w700</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Headline6">
        <item name="android:fontFamily">@font/poppins_w600</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Subtitle1">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="Typography.Subtitle2">
        <item name="android:fontFamily">@font/poppins_w500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Typography.Body1">
        <item name="android:fontFamily">@font/poppins_w700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Typography.Body2">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.Button">
        <item name="android:fontFamily">@font/poppins_w700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.Caption">
        <item name="android:fontFamily">@font/poppins_w400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_darker</item>
    </style>

    <style name="Typography.Overline">
        <item name="android:fontFamily">@font/poppins_w500</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">1.5</item>
    </style>

    <style name="Typography.TabLayoutTextAppearance">
        <item name="android:fontFamily">@font/poppins_w500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
    </style>

    <style name="HomeHeaderCustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_header_card_custom_corners</item>
    </style>

    <style name="ShapeAppearance_header_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="CustomTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/primary_orange_variant</item>
    </style>

    <style name="CustomProgressTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@null</item>
    </style>

    <style name="AccountSettingTabsTextStyle" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance_tabs_account_setting</item>
    </style>

    <style name="TextAppearance_tabs_account_setting" parent="">
        <item name="fontFamily">@font/poppins_w600</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomMaterialButtonStateColor" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/custom_material_button_positive_state_color</item>
    </style>


    <style name="ProgressBarStyle">
        <item name="colorAccent">#F37323</item>
    </style>

    <style name="CourseTabsTextStyle" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance_tabs_course</item>
    </style>

    <style name="TextAppearance_tabs_course" parent="">
        <item name="fontFamily">@font/poppins_w600</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OutlineBoxTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxStrokeColor">#F9663A</item>
    </style>

